<style>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Ensure smooth transitions */
  .category-section {
    transition: opacity 0.2s ease;
  }

  .pattern-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
  }

  .pattern-card:hover {
    transform: translateY(-2px);
  }

  /* Sidebar styles */
  .sidebar-hidden {
    display: none;
  }

  .category-link.active {
    background-color: rgba(14, 165, 233, 0.1);
    color: #38bdf8;
    border-left: 2px solid #0ea5e9;
    margin-left: -2px;
  }

  .mobile-category-link.active {
    background-color: rgba(14, 165, 233, 0.1);
    color: #38bdf8;
  }

  /* Mobile sidebar animation */
  .mobile-sidebar {
    transition: transform 0.3s ease-in-out;
  }

  .mobile-sidebar.open {
    transform: translateX(0);
  }

  .sidebar-overlay {
    transition: opacity 0.3s ease-in-out;
    opacity: 0;
  }

  .sidebar-overlay.show {
    opacity: 1;
  }

  @media (min-width: 1024px) {
    .sidebar-hidden {
      display: block;
    }
  }
</style>

<script>
  // Modal functionality
  const modal = document.getElementById('pattern-modal');
  const modalClose = document.getElementById('modal-close');
  const patternCards = document.querySelectorAll('.pattern-card');

  const statusColors = {
    'best-practice': 'bg-green-500/20 text-green-400 border-green-500/30',
    'validated-in-production': 'bg-blue-500/20 text-blue-400 border-blue-500/30',
    'established': 'bg-purple-500/20 text-purple-400 border-purple-500/30',
    'emerging': 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30',
    'proposed': 'bg-gray-500/20 text-gray-400 border-gray-500/30',
    'experimental-but-awesome': 'bg-pink-500/20 text-pink-400 border-pink-500/30',
    'rapidly-improving': 'bg-orange-500/20 text-orange-400 border-orange-500/30',
  };

  function getCurrentLang() {
    return localStorage.getItem('aap-language') || 'ko';
  }

  // Track current open pattern for language updates
  let currentOpenPatternId = null;

  function openModal(patternId) {
    const pattern = window.patternsData.find(p => p.id === patternId);
    if (!pattern) return;

    const lang = getCurrentLang();

    // Title
    document.getElementById('modal-title').textContent =
      lang === 'ko' && pattern.titleKo ? pattern.titleKo : pattern.title;

    // Status
    const statusEl = document.getElementById('modal-status');
    statusEl.textContent = pattern.status;
    statusEl.className = `text-xs px-2 py-1 rounded border whitespace-nowrap ${statusColors[pattern.status] || statusColors['proposed']}`;

    // Category
    document.getElementById('modal-category').textContent = pattern.category;

    // Source link
    const sourceEl = document.getElementById('modal-source');
    if (pattern.source) {
      sourceEl.href = pattern.source;
      sourceEl.classList.remove('hidden');
    } else {
      sourceEl.classList.add('hidden');
    }

    // Problem
    document.getElementById('modal-problem').textContent =
      lang === 'ko' && pattern.problem?.ko ? pattern.problem.ko : (pattern.problem?.en || '');

    // Solution
    document.getElementById('modal-solution').textContent =
      lang === 'ko' && pattern.solution?.ko ? pattern.solution.ko : (pattern.solution?.en || '');

    // Diagrams
    const diagramsSection = document.getElementById('modal-diagrams-section');
    const asciiTab = document.getElementById('modal-ascii-tab');
    const mermaidTab = document.getElementById('modal-mermaid-tab');
    const asciiContent = document.getElementById('modal-ascii');
    const mermaidContent = document.getElementById('modal-mermaid');

    if (pattern.ascii || pattern.mermaid) {
      diagramsSection.classList.remove('hidden');

      if (pattern.ascii) {
        asciiContent.textContent = pattern.ascii;
        asciiTab.classList.remove('hidden');
      } else {
        asciiTab.classList.add('hidden');
      }

      if (pattern.mermaid) {
        mermaidContent.querySelector('.mermaid').textContent = pattern.mermaid;
        mermaidTab.classList.remove('hidden');
      } else {
        mermaidTab.classList.add('hidden');
      }

      // Reset to ASCII tab
      asciiContent.classList.remove('hidden');
      mermaidContent.classList.add('hidden');
      asciiTab.classList.add('active', 'bg-dark-border', 'text-dark-text');
      asciiTab.classList.remove('bg-transparent', 'text-dark-muted');
      mermaidTab.classList.remove('active', 'bg-dark-border', 'text-dark-text');
      mermaidTab.classList.add('bg-transparent', 'text-dark-muted');
    } else {
      diagramsSection.classList.add('hidden');
    }

    // Code
    const codeSection = document.getElementById('modal-code-section');
    const codeContent = document.getElementById('modal-code');
    if (pattern.code) {
      codeContent.textContent = pattern.code;
      codeSection.classList.remove('hidden');
    } else {
      codeSection.classList.add('hidden');
    }

    // When to Use
    const whenSection = document.getElementById('modal-when-section');
    const whenList = document.getElementById('modal-when');
    const whenData = lang === 'ko' && pattern.whenToUse?.ko ? pattern.whenToUse.ko : (pattern.whenToUse?.en || []);
    if (whenData.length > 0) {
      whenList.innerHTML = whenData.map(item => `<li>${item}</li>`).join('');
      whenSection.classList.remove('hidden');
    } else {
      whenSection.classList.add('hidden');
    }

    // Pros
    const prosSection = document.getElementById('modal-pros-section');
    const prosList = document.getElementById('modal-pros');
    const prosData = lang === 'ko' && pattern.pros?.ko ? pattern.pros.ko : (pattern.pros?.en || []);
    if (prosData.length > 0) {
      prosList.innerHTML = prosData.map(item => `<li>${item}</li>`).join('');
      prosSection.classList.remove('hidden');
    } else {
      prosSection.classList.add('hidden');
    }

    // Cons
    const consSection = document.getElementById('modal-cons-section');
    const consList = document.getElementById('modal-cons');
    const consData = lang === 'ko' && pattern.cons?.ko ? pattern.cons.ko : (pattern.cons?.en || []);
    if (consData.length > 0) {
      consList.innerHTML = consData.map(item => `<li>${item}</li>`).join('');
      consSection.classList.remove('hidden');
    } else {
      consSection.classList.add('hidden');
    }

    // Tags
    const tagsContainer = document.getElementById('modal-tags');
    if (pattern.tags && pattern.tags.length > 0) {
      tagsContainer.innerHTML = pattern.tags.map(tag =>
        `<span class="text-xs px-2 py-1 rounded bg-dark-border text-dark-muted">#${tag}</span>`
      ).join('');
    } else {
      tagsContainer.innerHTML = '';
    }

    // Track current pattern
    currentOpenPatternId = patternId;

    // Show modal
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';

    // Re-render mermaid diagrams
    if (pattern.mermaid && window.mermaid) {
      setTimeout(() => {
        window.mermaid.run({ querySelector: '#modal-mermaid .mermaid' });
      }, 100);
    }
  }

  function closeModal() {
    modal.classList.add('hidden');
    document.body.style.overflow = '';
    currentOpenPatternId = null;
  }

  // Listen for language changes and update modal if open
  window.addEventListener('languageChange', (e) => {
    if (currentOpenPatternId) {
      openModal(currentOpenPatternId);
    }
  });

  // Event listeners
  patternCards.forEach(card => {
    card.addEventListener('click', (e) => {
      // Don't open modal if clicking on tab buttons
      if (e.target.closest('.tab-btn')) return;
      const patternId = card.getAttribute('data-pattern-id');
      openModal(patternId);
    });
  });

  modalClose?.addEventListener('click', closeModal);

  modal?.addEventListener('click', (e) => {
    if (e.target === modal || e.target.classList.contains('modal-container')) {
      closeModal();
    }
  });

  // ESC key to close
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
      closeModal();
    }
  });

  // Modal diagram tab switching
  document.getElementById('modal-ascii-tab')?.addEventListener('click', () => {
    document.getElementById('modal-ascii').classList.remove('hidden');
    document.getElementById('modal-mermaid').classList.add('hidden');
    document.getElementById('modal-ascii-tab').classList.add('active', 'bg-dark-border', 'text-dark-text');
    document.getElementById('modal-ascii-tab').classList.remove('bg-transparent', 'text-dark-muted');
    document.getElementById('modal-mermaid-tab').classList.remove('active', 'bg-dark-border', 'text-dark-text');
    document.getElementById('modal-mermaid-tab').classList.add('bg-transparent', 'text-dark-muted');
  });

  document.getElementById('modal-mermaid-tab')?.addEventListener('click', () => {
    document.getElementById('modal-ascii').classList.add('hidden');
    document.getElementById('modal-mermaid').classList.remove('hidden');
    document.getElementById('modal-mermaid-tab').classList.add('active', 'bg-dark-border', 'text-dark-text');
    document.getElementById('modal-mermaid-tab').classList.remove('bg-transparent', 'text-dark-muted');
    document.getElementById('modal-ascii-tab').classList.remove('active', 'bg-dark-border', 'text-dark-text');
    document.getElementById('modal-ascii-tab').classList.add('bg-transparent', 'text-dark-muted');

    // Re-render mermaid
    if (window.mermaid) {
      window.mermaid.run({ querySelector: '#modal-mermaid .mermaid' });
    }
  });

  // Mobile sidebar functionality
  const sidebarToggle = document.getElementById('sidebar-toggle');
  const sidebarClose = document.getElementById('sidebar-close');
  const mobileSidebar = document.getElementById('mobile-sidebar');
  const sidebarOverlay = document.getElementById('sidebar-overlay');
  const mobileCategoryLinks = document.querySelectorAll('.mobile-category-link');

  function openSidebar() {
    mobileSidebar.classList.add('open');
    sidebarOverlay.classList.remove('hidden');
    setTimeout(() => sidebarOverlay.classList.add('show'), 10);
    document.body.style.overflow = 'hidden';
  }

  function closeSidebar() {
    mobileSidebar.classList.remove('open');
    sidebarOverlay.classList.remove('show');
    setTimeout(() => sidebarOverlay.classList.add('hidden'), 300);
    document.body.style.overflow = '';
  }

  sidebarToggle?.addEventListener('click', openSidebar);
  sidebarClose?.addEventListener('click', closeSidebar);
  sidebarOverlay?.addEventListener('click', closeSidebar);

  // Close sidebar when clicking a category link on mobile
  mobileCategoryLinks.forEach(link => {
    link.addEventListener('click', () => {
      closeSidebar();
    });
  });

  // Category navigation - highlight active section on scroll
  const categorySections = document.querySelectorAll('.category-section');
  const categoryLinks = document.querySelectorAll('.category-link');
  const allCategoryLinks = document.querySelectorAll('.category-link, .mobile-category-link');

  function updateActiveCategory() {
    let currentSection = '';
    const scrollPos = window.scrollY + 150;

    categorySections.forEach((section) => {
      const sectionTop = section.offsetTop;
      const sectionHeight = section.offsetHeight;

      if (scrollPos >= sectionTop && scrollPos < sectionTop + sectionHeight) {
        currentSection = section.getAttribute('id');
      }
    });

    allCategoryLinks.forEach((link) => {
      link.classList.remove('active');
      if (link.getAttribute('href') === `#${currentSection}`) {
        link.classList.add('active');
      }
    });
  }

  window.addEventListener('scroll', updateActiveCategory);
  updateActiveCategory();
</script>
