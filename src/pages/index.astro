  'Security & Safety': 'ğŸ”’',
  'Tool Use & Environment': 'ğŸ”§',
  'UX & Collaboration': 'ğŸ‘¥',
  'Uncategorized': 'ğŸ“'
};

// Stats
const totalPatterns = patternsData.length;
const totalCategories = Object.keys(categories).length;
