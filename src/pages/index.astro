---
import MainLayout from '../layouts/MainLayout.astro';
import PatternCard from '../components/PatternCard.astro';
import PatternModal from '../components/PatternModal.astro';
import SearchBar from '../components/SearchBar.astro';
import LanguageToggle from '../components/LanguageToggle.astro';

// Import all pattern JSON files from patterns directory
const patternFiles = import.meta.glob('../data/patterns/*.json', { eager: true });

// Full pattern data for modal (keep all fields)
const fullPatternsData = Object.values(patternFiles).map((module: any) => {
  const p = module.default || module;
  return {
    id: p.id,
    title: p.title,
    titleKo: p.title_ko,
    category: p.category || 'Uncategorized',
    status: p.status,
    problem: p.problem,
    solution: p.solution,
    ascii: p.ascii_diagram,
    mermaid: p.mermaid_diagram,
    code: p.code_example,
    whenToUse: p.when_to_use,
    pros: p.pros,
    cons: p.cons,
    tags: p.tags || [],
    source: p.original_url
  };
});

// Transform pattern data to match PatternCard props (summary only)
const patternsData = fullPatternsData.map(p => ({
  id: p.id,
  title: p.title,
  titleKo: p.titleKo,
  category: p.category,
  status: p.status,
  description: p.problem?.en || p.solution?.en || '',
  descriptionKo: p.problem?.ko || p.solution?.ko || '',
  tags: p.tags
}));

// Group patterns by category
const categories = patternsData.reduce((acc: Record<string, typeof patternsData>, pattern) => {
  const category = pattern.category || 'Uncategorized';
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(pattern);
  return acc;
}, {});

// Category order
const categoryOrder = [
  'Orchestration & Control',
  'Context & Memory',
  'Feedback Loops',
  'Learning & Adaptation',
  'Reliability & Eval',
  'Security & Safety',
  'Tool Use & Environment',
  'UX & Collaboration',
  'Uncategorized'
];

// Sort categories
const sortedCategories = Object.entries(categories).sort((a, b) => {
  const indexA = categoryOrder.indexOf(a[0]);
  const indexB = categoryOrder.indexOf(b[0]);
  return (indexA === -1 ? 999 : indexA) - (indexB === -1 ? 999 : indexB);
});

// Category icons
const categoryIcons: Record<string, string> = {
  'Orchestration & Control': 'ğŸ›ï¸',
  'Context & Memory': 'ğŸ§ ',
  'Feedback Loops': 'ğŸ”„',
